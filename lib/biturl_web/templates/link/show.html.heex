    <thead>
      <tr>
        <th>OS</th>
        <th>Count</th>
      </tr>
    </thead>
    <tbody>
      <%= for {name, hits} <- @stats.oss do %>
      <tr>
        <td><%= name %></td>
        <td><%= hits %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</section>

<section class="phx-hero">
  <table>
    <thead>
      <tr>
        <th>Device</th>
